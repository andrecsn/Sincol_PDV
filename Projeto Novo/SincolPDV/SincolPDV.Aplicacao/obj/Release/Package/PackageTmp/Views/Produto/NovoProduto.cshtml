@model SincolPDV.Dominio.Produto

@{
    ViewBag.Title = "Novo Produto";
    Layout = null;
}


@using (Html.BeginForm("", "", FormMethod.Post, new { id = "formDados" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-dialog" id="modal">
        <div class="modal-content">
            <div class="modal-header alert-success">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i><span class="sr-only">Close</span></button>
                <h3 class="modal-title"><i class="glyphicon glyphicon-edit"></i> Cadastrar Produto</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="box-body">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Referência</label>
                                @Html.EditorFor(model => model.Referencia, new { htmlAttributes = new { @class = "form-control required", placeholder = "XXXXX" } })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Nome</label>
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control required", placeholder = "Nome Completo" } })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <label>&nbsp;</label>
                            <div class="form-group">
                                <label>
                                    @Html.CheckBoxFor(model => model.StatusBool, new { @checked = "checked", @class = "flat-red" })
                                    Ativo
                                </label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Descrição</label>
                                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", placeholder = "Breve descrição do Produto" } })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Fabricante</label>
                                @Html.DropDownListFor(model => model.FabricanteID,
                                new SelectList(ViewBag.Fabricante, "FabricanteID", "Descricao"),
                                new { @class = "form-control select2", style = "width: 100%;" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Fornecedor</label>
                                @Html.DropDownListFor(model => model.FornecedorID,
                                new SelectList(ViewBag.Fornecedor, "FornecedorID", "Nome"),
                                new { @class = "form-control select2", style = "width: 100%;" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Modelo</label>
                                @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Marca</label>
                                @Html.DropDownListFor(model => model.MarcaID,
                                new SelectList(ViewBag.Marca, "MarcaID", "Descricao"),
                                new { @class = "form-control select2", style = "width: 100%;" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Uni. de Entrada</label>
                                @Html.DropDownListFor(model => model.unEntrada,
                                    new SelectList(
                                  new List<Object>{
                                       new { value = "" , text = "Selecione"  },
                                       new { value = "Unidade" , text = "Unidade" },
                                       new { value = "Caixa" , text = "Caixa"}
                                    },
                                  "value",
                                  "text",
                                   2), new { @class = "form-control required" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Fator</label>
                                @Html.EditorFor(model => model.Fator, new { htmlAttributes = new { @Value = 1, @class = "form-control required" } })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Peso</label>
                                @Html.EditorFor(model => model.Peso, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex. 100gr" } })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Estoque</label>
                                @Html.DropDownListFor(model => model.EstoqueID,
                                new SelectList(ViewBag.Estoque, "EstoqueID", "Descricao"),
                                new { @class = "form-control required select2", style = "width: 100%;" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Est. Mín.</label>
                                @Html.EditorFor(model => model.EstoqueMinimo, new { htmlAttributes = new { @Value = 1, @class = "form-control required" } })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Est. Máx.</label>
                                @Html.EditorFor(model => model.EstoqueMaximo, new {htmlAttributes = new { @Value = 1, @class = "form-control required" } })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label>Preço de Compra</label>
                            <div class="input-group">
                                <span class="input-group-addon">$</span>
                                @Html.EditorFor(model => model.precoUnitario, new { htmlAttributes = new { @class = "form-control required" } })
                                <span class="input-group-addon">.00</span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label>Preço de Venda</label>
                            <div class="input-group">
                                <span class="input-group-addon">$</span>
                                @Html.EditorFor(model => model.ValorTabela, new { htmlAttributes = new { @class = "form-control required" } })
                                <span class="input-group-addon">.00</span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Observação</label>
                                @Html.TextAreaFor(model => model.Observacao, new { @class = "form-control" })
                            </div>
                        </div>

                    </div>
                </div>
            </div><!-- /.modal-content -->

            <div class="modal-footer">
                <div class="col-md-6">
                    <div class="form-group has-error">
                        <label class="control-label" id="mensagem" style="display:none"><i class="fa fa-times-circle-o"></i> Preencha todos os campos obrigatórios</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <button type="button" class="btn btn-success" onclick="Incluir('/Produto/NovoProduto', 'Produto incluido com sucesso!')"><i class="fa fa-save"></i> Cadastrar</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-sign-out"></i> Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Plugins/_Compartilhado.js"></script>