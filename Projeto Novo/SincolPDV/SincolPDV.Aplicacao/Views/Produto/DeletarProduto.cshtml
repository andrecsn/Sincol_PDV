@model SincolPDV.Dominio.Produto

@{
    ViewBag.Title = "Deletar Produto";
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header alert-danger">
            <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i><span class="sr-only">Close</span></button>
            <h3 class="modal-title"><i class="fa fa-trash"></i> Deletar Produto</h3>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="box-body">

                    <h4>Deseja realmente deletar o Produto <b> @Model.Nome? </b></h4>

                </div>
            </div>
        </div>
        <div class="modal-footer">
            @using (Html.BeginForm("DeletarProduto", "Produto", FormMethod.Post, new { id = "formDados" }))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.UsuarioID)

                <button type="button" class="btn btn-danger" onclick="Incluir('/Produto/DeletarProduto', 'Produto deletado com sucesso!')"><i class="fa fa-trash"></i> Deletar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-sign-out"></i> Fechar</button>
            }
        </div>
    </div>
</div>
