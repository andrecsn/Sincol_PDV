@model SincolPDV.Dominio.Usuario

@{
    ViewBag.Title = "Usuario";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<section class="content-header">
    <h1>
        Lista de Usuários
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Usuários</a></li>
        <li class="active">Listar Usuários</li>
    </ol>
</section>

</br>

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Pesquisa de Usuários</h3>
            </div>
            <form class="form-horizontal" id="pesquisa">
                <div class="box-body">

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Nome</label>
                        <div class="col-sm-5">
                            <input type="email" class="form-control" id="Nome" name="Nome" placeholder="Nome">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Função</label>
                        <div class="col-sm-5">
                            @Html.DropDownListFor(model => model.FuncaoUsuarioID, 
                                new SelectList(ViewBag.FuncaoUsuario, "FuncaoUsuarioID", "Funcao"), 
                                new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Status</label>
                        <div class="col-sm-5">
                            @Html.DropDownListFor(model => model.StatusId,
                                new SelectList(ViewBag.Status, "StatusId", "Descricao"),
                                new { @class = "form-control" })
                        </div>
                    </div>

                    <hr>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">&nbsp;</label>
                        <div class="col-md-5">
                            <button id="btnPesquisa" class="btn btn-md btn-primary pesquisa">Pesquisar <i class="fa fa-arrow-circle-right"></i></button>
                            <button id="btnCadastrar" class="btn btn-md btn-success pull-right cadastrar"><i class="fa fa-plus"></i> Novo Usuário </button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>


<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Resultado da pesquisa</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example4" class="table table-bordered table-striped" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nome</th>
                            <th>Telefone</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th width="100">Ações</th>
                        </tr>
                    </thead>
                </table>

            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>

<div class="modal fade" id="modal">

</div>