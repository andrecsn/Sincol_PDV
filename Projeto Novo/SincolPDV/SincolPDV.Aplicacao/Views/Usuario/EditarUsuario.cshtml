@model SincolPDV.Dominio.Usuario

@{
    ViewBag.Title = "Editar Usuário";
    Layout = null;
}

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "formDados" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-dialog" id="modal">
        <div class="modal-content">
            <div class="modal-header alert-success">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i><span class="sr-only">Close</span></button>
                <h3 class="modal-title"><i class="glyphicon glyphicon-edit"></i> Editar Usuários</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="box-body">

                        @Html.HiddenFor(model => model.UsuarioID)

                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Nome</label>
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control required", placeholder = "Nome Completo" } })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Telefone</label>
                                <input type="text" name="Telefone" id="Telefone" value="@Model.Telefone" class="form-control required" data-inputmask='"mask": "(99) 99999-9999"' data-mask>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="form-group">
                                <label>Email</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Função</label>
                                @Html.DropDownListFor(model => model.FuncaoUsuarioID,
                                new SelectList(ViewBag.FuncaoUsuario, "FuncaoUsuarioID", "Descricao"),
                                new { @class = "form-control select2", style = "width: 100%;" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Perfil de Acesso</label>
                                @Html.DropDownListFor(model => model.PerfilAcessoID,
                                new SelectList(ViewBag.PerfilAcesso, "PerfilAcessoID", "Descricao"),
                                new { @class = "form-control select2", style = "width: 100%;" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Login</label>
                                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control required", placeholder = "Login de acesso" } })
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Senha</label>
                                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control required", placeholder = "Senha de acesso" } })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label></label>
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <label>
                                    @Html.CheckBoxFor(model => model.StatusBool, new { @class = "flat-red" })
                                    Ativo
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /.modal-content -->

            <div class="modal-footer">
                <div class="col-md-6">
                    <div class="form-group has-error">
                        <label class="control-label" id="mensagem" style="display:none"><i class="fa fa-times-circle-o"></i> Preencha todos os campos obrigatórios</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <button type="button" class="btn btn-success" onclick="Editar('/Usuario/EditarUsuario', 'Usuário alterado com sucesso!')"><i class="fa fa-save"></i>  Salvar Alteração</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-sign-out"></i> Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Plugins/_Compartilhado.js"></script>