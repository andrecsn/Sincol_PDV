@model IEnumerable<SincolPDV.Dominio.Cliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}




<section class="content-header">
    <h1>
        Lista de Clientes
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Clientes</a></li>
        <li class="active">Listar Clientes</li>
    </ol>
</section>

</br>

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Pesquisa de Clientes</h3>
            </div>
            <form class="form-horizontal" id="pesquisa">
                <div class="box-body">

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Nome</label>
                        <div class="col-sm-5">
                            <input type="email" class="form-control" id="Nome" name="Nome" placeholder="Nome">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Sexo</label>
                        <div class="col-sm-5">
                            <select id="Sexo" name="Sexo" class="form-control">
                                <option value="">-- Selecione --</option>
                                <option value="Masculino"> Masculino </option>
                                <option value="Feminino"> Feminino </option>

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Status</label>
                        <div class="col-sm-5">
                            <select id="Status" name="Status" class="form-control">
                                <option value=0>-- Selecione --</option>
                                <option value=1> Ativado </option>
                                <option value=2> Desativado </option>
                            </select>
                        </div>
                    </div>

                    <hr>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">&nbsp;</label>
                        <div class="col-md-5">
                            <button id="btnPesquisa" class="btn btn-md btn-primary pesquisa">Pesquisar <i class="fa fa-arrow-circle-right"></i></button>
                            <button id="btnCadastrar" class="btn btn-md btn-success pull-right cadastrar"><i class="fa fa-plus"></i> Novo Cliente </button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>


<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Resultado da pesquisa</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example4" class="table table-bordered table-striped" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nome</th>
                            <th>Telefone</th>
                            <th>Sexo</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th width="100">Ações</th>
                        </tr>
                    </thead>
                </table>

            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>

<div class="modal fade" id="modal">

</div>

@section scripts{
    @Scripts.Render("~/Plugins/js/uteis")

    <script>

        $(document).ready(function () {
            //Gerando datatable
            GeraDataTableCliente();

            //Botões PopUp
            $('#btnCadastrar').on('click', function () {
                event.preventDefault();
                $("#modal").load("NovoCliente", function () {
                    $("#modal").modal('show');
                })
            });

            $('#example4 tbody').on('click', '.details', function () {
                var data = $(this).parent().parent().find('span').data('codigo');
                $("#modal").load("DetalhesCliente?id=" + data, function () {
                    $("#modal").modal('show');
                })
            });

            $('#example4 tbody').on('click', '.edit', function () {
                var data = $(this).parent().parent().find('span').data('codigo');
                $("#modal").load("EditarCliente?id=" + data, function () {
                    $("#modal").modal('show');
                })
            });

            $('#example4 tbody').on('click', '.delete', function () {
                var data = $(this).parent().parent().find('span').data('codigo');
                $("#modal").load("DeletarCliente?id=" + data, function () {
                    $("#modal").modal('show');
                })
            });

        });

        //Incluir Cliente
        function Incluir(caminho) {

            var cont = 0;
            $("#formDados .required").each(function () {
                if($(this).val() == "")
                {
                    $(this).css({"border" : "1px solid #F00"});
                    cont++;
                }
            });

            if (cont == 0) {
                var dadosSerializados = $('#formDados').serialize();
                $.ajax({
                    type: "POST",
                    url: caminho,
                    data: dadosSerializados,
                    success: function () {
                        $("#modal").modal('hide');
                        MensagemSucesso('Cliente incluirod com Sucesso!');
                        GeraDataTableCliente();
                    },
                    error: function () {
                        $("#modal").modal('hide');
                        MensagemErro('Ocorreu um Erro ao Incluir!');
                    }
                });
            } else {
                $('#formDados #mensagem').css("display", "block");
            }
        }

        //Editando Cliente
        function Editar(caminho) {

            var cont = 0;
            $("#formDados .required").each(function () {
                if($(this).val() == "")
                {
                    $(this).css({"border" : "1px solid #F00"});
                    cont++;
                }
            });

            if (cont == 0) {
                var dadosSerializados = $('#formDados').serialize();
                $.ajax({
                    type: "POST",
                    url: caminho,
                    data: dadosSerializados,
                    success: function () {
                        $("#modal").modal('hide');
                        MensagemSucesso('Item editado com Sucesso!');
                        GeraDataTableCliente();
                    },
                    error: function () {
                        $("#modal").modal('hide');
                        MensagemErro('Ocorreu um Erro ao Editar!');
                    }
                });
            }
        }

        //Deletando Cliente
        function Deletar(caminho) {
            var dadosSerializados = $('#formDados').serialize();
            $.ajax({
                type: "POST",
                url: caminho,
                data: dadosSerializados,
                success: function () {
                    $("#modal").modal('hide');
                    MensagemSucesso('Item Deletado com Sucesso!');
                    GeraDataTableCliente();
                },
                error: function () {
                    $("#modal").modal('hide');
                    MensagemErro('Ocorreu um erro ao Deletar!');

                }
            });
        }

        $("#btnPesquisa").on("click", function (event) {
            event.preventDefault();
            var pesquisa = $("#pesquisa").serialize();

            $.ajax({
                type: "GET",
                url: "/Cliente/PreencheGrid",
                dataType: 'json',
                data: pesquisa,

                success: function (data) {

                    $('#example4').DataTable({
                        destroy: true,
                        processing: true,
                        data: data.data,
                        //"ajax": "/Cliente/PreencheGrid",
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.10.11/i18n/Portuguese-Brasil.json"
                        },
                        columns: [
                            {
                                "data": "ClienteID",
                                //"visible": false,
                                "render": function (id) {
                                    var status = "<span data-codigo='" + id + "'>" + id + "</span>";
                                    return status;
                                }
                            },
                            { "data": "Nome" },
                            { "data": "Telefone" },
                            { "data": "Sexo" },
                            { "data": "Email" },
                            {
                                "data": "StatusBool",
                                "render": function (oObj) {
                                    var status;
                                    if (oObj == true) {
                                        status = "<span class='label label-success'>Ativado</span>";
                                    } else {
                                        status = "<span class='label label-danger'>Desativado</span>";
                                    }
                                    return status;
                                }
                            },
                            {
                                data: null,
                                defaultContent: '<button class="btn btn-sm btn-default details"><i class="glyphicon glyphicon-file"></i></button> ' +
                                                '<button class="btn btn-sm btn-danger delete"><i class="glyphicon glyphicon-trash"></i></button> ' +
                                                '<button class="btn btn-sm btn-primary edit"><i class="glyphicon glyphicon-edit"></i></button>',
                                orderable: false
                            },
                        ]
                    });

                }
            });

        });

        //Gerando DataTables
        function GeraDataTableCliente() {
            $('#example4').DataTable({
                destroy: true,
                processing: true,
                "ajax": "/Cliente/PreencheGrid",
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.11/i18n/Portuguese-Brasil.json"
                },
                columns: [
                    {
                        "data": "ClienteID",
                        //"visible": false,
                        "render": function (id) {
                            var status = "<span data-codigo='" + id + "'>" + id + "</span>";
                            return status;
                        }
                    },
                    { "data": "Nome" },
                    { "data": "Telefone" },
                    { "data": "Sexo" },
                    { "data": "Email" },
                    {
                        "data": "StatusBool",
                        "render": function (oObj) {
                            var status;
                            if (oObj == true) {
                                status = "<span class='label label-success'>Ativado</span>";
                            } else {
                                status = "<span class='label label-danger'>Desativado</span>";
                            }
                            return status;
                        }
                    },
                    {
                        data: null,
                        defaultContent: '<button class="btn btn-sm btn-default details"><i class="glyphicon glyphicon-file"></i></button> ' +
                                        '<button class="btn btn-sm btn-danger delete"><i class="glyphicon glyphicon-trash"></i></button> ' +
                                        '<button class="btn btn-sm btn-primary edit"><i class="glyphicon glyphicon-edit"></i></button>',
                        orderable: false
                    },
                ]
            });
        }

    </script>
}







