@model IEnumerable<SincolPDV.Dominio.Cliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<section class="content-header">
    <h1>
        Lista de Clientes
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Clientes</a></li>
        <li class="active">Listar Clientes</li>
    </ol>
</section>

</br>

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Pesquisa de Clientes</h3>
            </div>
            <form class="form-horizontal">
                <div class="box-body">

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Nome</label>
                        <div class="col-sm-5">
                            <input type="email" class="form-control" id="nome" placeholder="Nome">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Sexo</label>
                        <div class="col-sm-5">
                            <select id="sexo" class="form-control">
                                <option>-- Selecione --</option>
                                <option value="Masculino"> Masculino </option>
                                <option value="Feminino"> Feminino </option>

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Status</label>
                        <div class="col-sm-5">
                            <select id="status" class="form-control">
                                <option>-- Selecione --</option>
                                <option value = 1> Ativo </option>
                                <option value = 0> Inativo </option>

                            </select>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>


<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Resultado da pesquisa</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nome Completo</th>
                            <th>Telefone</th>
                            <th>Sexo</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th width="150px">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sexo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    <button class="btn btn-default details" data-id="@item.ClienteID"><i class="glyphicon glyphicon-file"></i></button>
                                    <button class="btn btn-danger delete" data-id="@item.ClienteID"><i class="glyphicon glyphicon-trash"></i></button>
                                    <button class="btn btn-primary edit" data-id="@item.ClienteID"><i class="glyphicon glyphicon-edit"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Nome Completo</th>
                            <th>Telefone</th>
                            <th>Sexo</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>

<div class="modal" id="modal">

</div>

@section scripts{
    <script>
        $(function () {
            $(".details").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("DetalhesCliente?id=" + id, function () {
                    $("#modal").modal('show');
                })
            });

            $(".edit").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("EditarCliente?id=" + id, function () {
                    $("#modal").modal('show');
                })
            });

            $(".delete").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("DeletarCliente?id=" + id, function () {
                    $("#modal").modal('show');
                })
            });
        })
    </script>
}







